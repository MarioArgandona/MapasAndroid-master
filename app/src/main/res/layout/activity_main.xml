    <GridLayout
        android:id="@+id/gl1"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal"
        tools:context=".GridXMLActivity">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imvLunaParc"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/lunaparc"
                android:onClick="mostrarUbicacion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imvLunaParc"
                android:text="LunaParc"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imvLirios"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/lirios"
                android:onClick="mostrarUbicacion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imvLirios"
                android:text="Lago de los Lirios"
                android:textSize="20dp"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imvGuadalupe"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/guadalupe"
                android:onClick="mostrarUbicacion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imvGuadalupe"
                android:text="Lago de Guadalupe"
                android:textSize="20dp"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imvHambre"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/hambre"
                android:onClick="mostrarUbicacion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imvHambre"
                android:text="Calle del Hambre"
                android:textSize="20dp"/>

        </LinearLayout>



    </GridLayout>



</RelativeLayout>
